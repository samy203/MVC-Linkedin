@model LoginViewModel

@{
    Layout = null;
}
<head>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="https://code.jquery.com/jquery-1.11.1.min.js"></script>
    <link rel="stylesheet" href="redirectsheet.css">
    <link type="text/css" rel="stylesheet" href="~/Content/redirectsheet.css" />
</head>

<body>
    <div class="main-container">
        <div class="title">Linkedin  <i class="fa fa-linkedin-square"></i></div>
        <div class="welcome">Welcome Back</div>
        <div class="sub-welcome">Don't miss your next opportunity, Sign in to stay updated on professional world</div>
        @using (Html.BeginForm("RedirectLogin", "Account", new { role = "form", id = "logingForm" }))
            {

            @Html.AntiForgeryToken()

            <div class="input">
                @Html.TextBoxFor(m => m.LoginEmail, new { @class = "form-control", placeholder = "Email" })
                @Html.ValidationMessageFor(m => m.LoginEmail, "", new { style = "font-size:12px ; color:red" })
            </div>

            <div class="input">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password" })
                @Html.ValidationMessageFor(m => m.Password, "", new { style = "font-size:12px ; color:red" })
            </div>
            <div class="input"><input type="submit" class="form-control submit" value="Sign-in"></div>
        }
        <div class="register">New to Linkedin? @Html.ActionLink("Register Now", "Interface")</div>
    </div>
</body>
