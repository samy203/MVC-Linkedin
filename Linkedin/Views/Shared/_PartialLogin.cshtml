@model LoginViewModel

<head>
    <link type="text/css" rel="stylesheet" href="~/Content/style.css" />
</head>
<body>
    <section id="loginForm">
        <div class="header">
            <div id="logo" class="header"> <img src="~/Resource/logo.png" /> </div>

            @using (Html.BeginForm("LoginInterface", "Account", new { role = "form", id = "logingForm" }))
            {
                @Html.AntiForgeryToken()

                <div id="form1" class="header">
                    @Html.TextBoxFor(m => m.LoginEmail, new { style = "width:200px;height:25px;margin-bottom:3.5px", placeholder = "Email" })

                    @Html.ValidationMessageFor(m => m.LoginEmail, "", new { style = "font-size:12px ; color:red" })
                </div>
                <div class="header" id="form2">

                    @Html.PasswordFor(m => m.Password, new { style = "width:200px;height:25px;margin-bottom:3.5px", placeholder = "Password" })
                    @Html.ValidationMessageFor(m => m.Password, "", new { style = "font-size:12px ; color:red" })
                </div>


                    <div class="header" id="submit1">
                        <input class="btn btn-default" type="submit" value="Log in" id="submit1" />
                    </div>
            }
        </div>
    </section>
    @RenderBody()
        
</body>
